{
    "name": "test-suite",
    "version": "1.0.0",
    "description": "Test suite for microservices and logging system",
    "scripts": {
        "test:app": "cucumber-js ./app/features --require ./app/step_definitions --format json:./reports/cucumber_report.json && node generate_report.js",
        "test:jenkins": "mocha jenkins/**/*.test.js --reporter mochawesome",
        "test:logs": "mocha logs/**/*.test.js --reporter mochawesome",
        "test:cucumber": "cucumber-js tests/features --require tests/step_definitions --format json:./reports/cucumber_report.json && node generate_report.js",
        "test:all": "npm run test:app && npm run test:jenkins && npm run test:logs && npm run test:cucumber"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^11.0.1",
        "chai": "^5.1.1",
        "cucumber": "^6.0.7",
        "cucumber-html-reporter": "^7.1.1",
        "jest": "^29.7.0",
        "mocha": "^10.7.3",
        "mochawesome": "^7.1.3",
        "supertest": "^7.0.0"
    },
    "dependencies": {
        "@faker-js/faker": "^7.6.0",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1"
    }
}
